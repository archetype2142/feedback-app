<div id="flash-messages" class="fixed top-4 right-4 z-50" 
     data-controller="flash">
  <% flash.each do |type, message| %>
    <% flash_class = case type
         when 'notice', 'success'
           'bg-green-500'
         when 'error', 'alert'
           'bg-red-500'
         when 'warning'
           'bg-yellow-500'
         else
           'bg-blue-500'
         end %>

    <div class="<%= flash_class %> text-white px-6 py-4 rounded-lg shadow-lg mb-4 flex items-center justify-between transform translate-x-0 transition-transform duration-300 ease-in-out"
         data-flash-target="message"
         role="alert">
      <div class="flex items-center">
        <% case type %>
        <% when 'notice', 'success' %>
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        <% when 'error', 'alert' %>
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        <% when 'warning' %>
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        <% else %>
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        <% end %>
        <p><%= message %></p>
      </div>
      <button class="ml-4 hover:text-gray-200" data-action="click->flash#dismiss">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  <% end %>
</div>
